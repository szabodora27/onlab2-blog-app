@page
@model RegisterModel

<h2 class="page-title">Regisztráció</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <div class="form-group material-design">
                    <input asp-for="Input.LastName" type="text" autocomplete="off" onkeyup="this.setAttribute('value', this.value);">
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.LastName"></label>
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group material-design">
                    <input asp-for="Input.FirstName" type="text" autocomplete="off" onkeyup="this.setAttribute('value', this.value);">
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.FirstName"></label>
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group material-design">
                    <input asp-for="Input.Email" type="email" autocomplete="off" onkeyup="this.setAttribute('value', this.value);">
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.Email"></label>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group material-design">
                    <input asp-for="Input.Password" type="password" autocomplete="off" onkeyup="this.setAttribute('value', this.value);">
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.Password"></label>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group material-design">
                    <input asp-for="Input.ConfirmPassword" type="password" autocomplete="off" onkeyup="this.setAttribute('value', this.value);">
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.ConfirmPassword"></label>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-default">Regisztrálok</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
