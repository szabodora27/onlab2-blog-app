@page
@model ChangePasswordModel

<h4>Jelszó módosítása</h4>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form id="change-password-form" method="post">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <div class="form-group material-design">
                    <input asp-for="Input.OldPassword"/>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.OldPassword"></label>
                </div>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">               
                <div class="form-group material-design">
                    <input asp-for="Input.NewPassword"/>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.NewPassword"></label>
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group material-design">
                    <input asp-for="Input.ConfirmPassword"/>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label asp-for="Input.ConfirmPassword"></label>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Jelszó módosítása</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
